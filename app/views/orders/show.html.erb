<div class="row offset-">
  <h2>注文履歴詳細</h2>
</div>

<div class="row">
  <div class="col-md-6 pt-3">
    <h4>注文情報</h4>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th class="text-white bg-dark">注文日</th>
          <td>
            <%= @order.created_at.strftime("%Y,%m,%d") %>
          </td>
        </tr>
        <tr>
          <th class="text-white bg-dark">配送先</th>
          <td>
            〒<%= @order.postal_code %>
            <%= @order.adress %>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="text-white bg-dark">支払い方法</th>
          <td>
            <%= @order.payment_method %>
          </td>
        </tr>
        <tr>
          <th class="text-white bg-dark">ステータス</th>
          <td>
            <%= @order.status %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  
  
  <div class="col-md-4 pt-3">
    <h4>請求情報</h4>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th class="text-white bg-dark">商品合計</th>
          <td></td>
        </tr>
        <tr>
          <th class="text-white bg-dark">配送料</th>
          <td><%= @order.shipping_price %>円</td>
        </tr>
        <tr>
          <th class="text-white bg-dark">ご請求額</th>
          <td></td>
        </tr>
      </tbody>
    </table>
  </div>
  
  
  <div class="col-md-8 pt-3">
    <h4>注文内容</h4>
    <table>
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <tbody>
          <%= @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.food.name %></td>
            <td></td>
            <td><%= order_detail.quantity %></td>
            <td></td>
          </tr>
        </tbody>
      </thead>
    </table>
  </div>
</div>


