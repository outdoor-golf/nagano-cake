<div class="row offset-">
  <h2>注文情報入力</h2>
</div>

<%= form_with url: confirm_orders_path, local: true, method: post do |f| %>
<h5>支払い方法</h5>
<div class="form-group">
  <%= f.radio_button :payment_method, 0 %>
  <%= f.label :payment_method, "クレジットカード" %>
  <%= f.radio_button :payment_method, 1 %>
  <%= f.label :payment_method, "銀行振込" %>
</div>

<h2>お届け先</h2>
<div class="form-group">
  <%=f.radio_button :adress_option, 0 %>
  <%=f.label :adress_option, "ご自身の住所" %>
  〒<%= current_customer.postal_code %><%= current_customer.adress %>
  <%= current_customer.last_name%><%= current_customer.first_name %>
</div>

<div class="form-group">
  <%= f.radio_button :adress_option, 1 %>
  <%= f.label :adress_option, "登録済み住所から選択" %>
  <%= f.collection_select :adress_id, @adresses, :id, :name, include_blank: "選択してください" %>
</div>

<div class="form-group">
  <%= f.radio_button :adress_option, 2 %>
  <%= f.label :adress_option, "新しいお届け先" %>
  
  <div class="form-group row">
    <div class="col-3">
      <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
    </div>
    <div class="col-7">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "adress", class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="cpl-3">
      <%= f.label :adress, "住所" %>
    </div>
    <div class="col-7">
      <%= f.text_field :adress, autofocus: true, autocomplete: "adress", class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-3">
      <%= f.label :name, "宛名" %>
    </div>
    <div class="col-7">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
    </div>
  </div>
  
  <%= f.submit "確認画面へ進む", class: "btn btn success" %>
  <% end %>
</div>