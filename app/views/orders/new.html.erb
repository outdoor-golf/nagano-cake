<h1 class="text-center">注文情報入力</h1>

<div class="mx-auto w-50 border rounded bg-white p-3">
<%= form_with url: confirm_orders_path, local: true, method: :post do |f| %>
 
  <div class="form-group">
    <div class="lead mb-2">支払い方法</div>
    <%= f.radio_button :payment_method, 0 %>
    クレジットカード
    <%= f.radio_button :payment_method, 1 %>
    銀行振込
    </div>

  

    <div class="form-group row">
    <div class="col-3">
      <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
    </div>
    <div class="col-7">
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "address", class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="cpl-3">
      <%= f.label :address, "住所" %>
    </div>
    <div class="col-7">
      <%= f.text_field :address, autofocus: true, autocomplete: "adress", class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-3">
      <%= f.label :name, "宛名" %>
    </div>
    <div class="col-7">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
    </div>
  </div>
  
  </div>
    
    <%= f.submit "購入確認へ", class:"btn btn-primary " %>
  <% end %>
  </div>