<div class="container">
<h1>商品一覧</h1>
<table class="table">
  <tr>
    <td>商品ID</td>
    <td>商品名</td>
    <td>税抜価格</td>
    <td>ジャンル</td>
    <td>ステータス</td>
  </tr>
  <% @foods.each do |food| %>
  <tr>
    <td><%= food.id %></td>
    <td><%= food.name %></td>
    <td><%= food.price %></td>
    <td><%= food.genre.name %></td>
    <td><%= food.get_status(food.sale_status) %></td>
  </tr>
  <% end %>
</table>
</div>