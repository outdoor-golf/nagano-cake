<div class="container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-3">
      <%= image_tag @food.image,size: '200x200' %>
    </div>
    <div class="col">
      <%= @food.name %><br>
      <%= @food.explanation %><br>
      ¥<%= @food.price %>(税込)<br>
      <%= form_with model: @cart_food do |f| %>
        <%= f.select :quantity,*[1..10] %>
        <%= f.hidden_field :food_id,:value=>@food.id %>
        <%= f.submit"カートに入れる",class:"bth btn-success" %>
      <% end %>
    </div>
  </div>
</div>